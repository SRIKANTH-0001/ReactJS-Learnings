//Main.jsx file
import { StrictMode } from 'react'
import { createRoot } from 'react-dom/client'
import './index.css'
import App from './App.jsx'

createRoot(document.getElementById('root')).render(
  <StrictMode>
    <App />
  </StrictMode>,
)

//App.jsx File
import Top from './Top.jsx'
import Bottom from './Bottom.jsx'
import Routine from './Routine.jsx'

function App() {
  return(
    <>
    <Top/>
    <Routine/>
    <Bottom/>
    </>
  );
}
export default App

//Bottom.jsx File
function Bottom(){
return(
    <footer>
        <p>&copy; This info was added on {new Date().getFullYear()}</p>
    </footer>
);
}
export default Bottom

//Top.jsx File
function top(){
    return(
        <header>
